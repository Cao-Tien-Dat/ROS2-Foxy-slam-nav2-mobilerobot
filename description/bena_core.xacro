<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
        <xacro:include filename = "quan_tinh.xacro"/>

    <material name="trang">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="xanhduong">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="vang">
        <color rgba="1 1 0 1"/>
    </material>

    <material name="do">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link">
        
    </link>

    <!-- KHUNG LINK-->
    <joint name="khung" type="fixed">
        <parent link="base_link"/>
        <child link="khung"/>
        <origin xyz="-0.1 0 0" rpy="0 0 0"/>
    </joint>

    <link name = "khung">
        <visual>
            <origin xyz ="0.15 0 0.075"/> <!--nang khung xe len, neu khong se lech truc-->
            <geometry>
                <box size = "0.3 0.3 0.15"/>
            </geometry>
            <material name= "vang"/>
        </visual>

        <collision>
            <origin xyz ="0.15 0 0.075"/>
            <geometry>
                <box size = "0.3 0.3 0.15"/>
            </geometry>
        </collision>

        <!-- them quan tinh hinh hop dac-->
        <xacro:quan_tinh_hop mass ="0.5" x ="0.3" y="0.3" z="0.15">
            <origin xyz = "0.15 0 0.075" rpy = "0 0 0"/>
        </xacro:quan_tinh_hop>

    </link>
    
    <!-- banh trai LINK-->
     <joint name = "khop_banh_trai" type = "continuous">
        <parent link = "base_link"/>
        <child link ="banh_trai"/>
        <origin xyz = " 0 0.175 0 " rpy = "-${pi/2} 0 0"/> <!--ban than no la hinh tru nam ngang, bay gio muon quay thanh banh xe thi phai xoay het 90 quanh truc x de xoay banh doc-->
        <axis xyz = " 0 0 1"/>
     </joint>

     <link name = "banh_trai">
        <visual>
            <geometry>
                <cylinder radius ="0.05" length = " 0.04"/>
            </geometry>
            <material name = "xanhduong"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius ="0.05" length = " 0.04"/>
            </geometry>
        </collision>

        <!-- quan tinh tru dac-->
         <xacro:quan_tinh_tru mass = "0.1" length="0.4" radius="0.05">
            <origin xyz = "0 0 0" rpy ="0 0 0 "/>
         </xacro:quan_tinh_tru>

     </link>


     <!-- banh phai LINK-->
     <joint name = "khop_banh_phai" type = "continuous">
        <parent link = "base_link"/>
        <child link ="banh_phai"/>
        <origin xyz = " 0 -0.175 0 " rpy = "${pi/2} 0 0"/> <!--ban than no la hinh tru nam ngang, bay gio muon quay thanh banh xe thi phai xoay het 90 quanh truc x de xoay banh doc-->
        <axis xyz = " 0 0 -1"/>
     </joint>

     <link name = "banh_phai">
        <visual>
            <geometry>
                <cylinder radius ="0.05" length = " 0.04"/>
            </geometry>
            <material name = "xanhduong"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius ="0.05" length = " 0.04"/>
            </geometry>
        </collision>
         <!-- quan tinh tru dac-->
         <xacro:quan_tinh_tru mass = "0.1" length="0.4" radius="0.05">
            <origin xyz = "0 0 0" rpy ="0 0 0 "/>
         </xacro:quan_tinh_tru>
     </link>
     


     <!-- BANH LAN-->
      <joint name ="khop banh lan" type = "fixed" >
        <parent link = "base_link"/>
        <child link = "banh_lan"/>
        <origin xyz = "0.14 0 0"/>
      </joint>

      <link name = "banh_lan">
        <visual>
            <geometry>
                <sphere radius = " 0.05"/>
            </geometry>
            <meterial name = "do"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius = " 0.05"/>
            </geometry>
        </collision>
        <!-- quan tinh cau-->
         <xacro:quan_tinh_cau mass="0.1" radius="0.05">
            <origin xyz = "0 0 0" ryp = " 0 0 0"/>
         </xacro:quan_tinh_cau>

      </link>



</robot>
